<div class="text-center" style="color:darkcyan">
    <h1>Kullanıcı</h1>
</div>
<button type="button" onclick="$('#AccountModal').modal('show')" class="btn btn-primary" data-toggle="modal">Kullanıcı Ekle</button>
<table class="table table-hover">
    <thead>
    <th scope="col">id</th>
    <th scope="col">Name</th>
    <th scope="col">Surame</th>
    <th scope="col">Email</th>
    <th scope="col">Password</th>
    <th scope="col"></th>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.kullaniciId</th>
                <td>@item.kullaniciAd</td>
                <td>@item.kullaniciSoyad</td>
                <td>@item.Email</td>
                <td>@item.sifre</td>

                <td><a class="btn btn-danger" asp-route-id="@item.kullaniciId" asp-action="DeleteYazar">Sil</a></td>
            </tr>
        }
    </tbody>

</table>


<div class="modal" id="AccountModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" action="/Home/AddYazar">
                <div class="modal-body">
                    <div class="form-body">
                        <input type="hidden" name="kullaniciId" class="form-control" />
                        <input type="text" name="kullaniciAd" class="form-control" />
                        <input type="text" name="kullaniciSoyad" class="form-control" />
                        <input type="text" name="Email" class="form-control" />
                        <input type="text" name="sifre" class="form-control" />


                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>